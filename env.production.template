# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret (use a strong, random secret in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Google Cloud Storage
GCS_PROJECT_ID=syntharacare
GCS_BUCKET_NAME=syntharauibucket
# GCS_CREDENTIALS should be set as a secret in Cloud Run

# Optional: Gemini AI (for chatbot features)
# GEMINI_API_KEY=your-gemini-api-key-here

# Server Configuration
NODE_ENV=production
PORT=8080
